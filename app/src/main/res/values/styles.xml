<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="colorControlNormal">@color/lightGrey</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="android:textColorPrimary">@android:color/white</item>

        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="DateTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ErrorAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
